@{
  Layout="_Layout";
}

@using HairSalon.Models;

<h1>Stylists</h1>

@if (Model.Count == 0)
{
  <h2>There are currently no Stylists added yet</h2>
}

<ul>
  @foreach(Stylist stylist in Model)
  {
    <li>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</li>
  }
</ul>


<p>@Html.ActionLink("Add a Stylist", "Create")</p>
<p>@Html.ActionLink("Add Client", "Create", "Clients")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>